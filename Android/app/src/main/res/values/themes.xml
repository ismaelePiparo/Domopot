<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DomopotApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg</item>
        <!-- Font -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
    </style>

    <style name="TextSemiBold" >
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextTitle" >
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextSmallCardTitle" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextTitleTag" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextLabel" >
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="PrimaryButton" >
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AddButton" >
        <item name="android:src">@drawable/ic_add</item>
        <item name="android:tint">@color/primary</item>
        <item name="android:backgroundTint">@color/zxing_transparent</item>
    </style>

    <style name="SearchButton" >
        <item name="android:src">@drawable/ic_search</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@drawable/circle_primary</item>
    </style>

    <style name="CaretButton" >
        <item name="android:tint">@color/info</item>
        <item name="android:backgroundTint">@color/zxing_transparent</item>
    </style>

    <style name="SettingsButton" >
        <item name="android:radius">0dp</item>
        <item name="android:background">@drawable/btn_settings</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
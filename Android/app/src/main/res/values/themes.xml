        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/title_left_margin</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/title_left_margin</item>
    </style>

    <style name="SmallCardSecondaryButton" >
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>

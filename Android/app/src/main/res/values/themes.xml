    </style>

    <style name="CaretButton" >
        <item name="android:tint">@color/info</item>
        <item name="android:backgroundTint">@color/zxing_transparent</item>
    </style>

    <style name="SettingsButton" >
        <item name="android:radius">0dp</item>
        <item name="android:background">@drawable/btn_settings</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleBackButton">
        <item name="android:src">@drawable/ic_chevron_left</item>
        <item name="android:tint">@color/info</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginEnd">@dimen/title_backbutton_right_margin</item>
        <item name="android:layout_marginTop">@dimen/title_backbutton_top_margin</item>
        <item name="android:background">@color/zxing_transparent</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="ConfigTitleBackButton">
        <item name="android:src">@drawable/ic_chevron_left</item>
        <item name="android:tint">@color/info</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginEnd">@dimen/title_backbutton_right_margin</item>
        <item name="android:layout_marginTop">-2dp</item>
        <item name="android:background">@color/zxing_transparent</item>

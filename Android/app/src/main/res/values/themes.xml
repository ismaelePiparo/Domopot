<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DomopotApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg</item>
        <!-- Font -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q"> false </item>
    </style>

    <style name="TextSemiBold" >
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextTitle" >
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextConfigTitle" >
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="TextSmallCardTitle" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextTitleTag" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextLabel" >
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextPlantType" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/info</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_light_italic</item>
        <item name="android:fontFamily">@font/poppins_light_italic</item>
    </style>

    <style name="TextDescription" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextButtonLabel" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/info</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextDetailsStatLabel" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextDetailsSubtitle" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PrimaryButton" >
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/title_left_margin</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/title_left_margin</item>
    </style>

    <style name="SecondaryOutlineButton" >
        <item name="android:background">@drawable/btn_secondary_outline</item>
        <item name="android:textSize">25sp</item>
